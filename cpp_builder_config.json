{
	"compiler": {
		"compiler_style": "gcc",
		"compiler_exe": "gcc",
		"linker_exe": "gcc"
	},
	
	"directories": {
		"project_dir": ".",
		"exe_path_name": "bin/Game.bin",
		"include_dirs": [
			"include",
			"ext"
		],
		"source_dirs": [
			"src"
		],
		"temp_dir": "obj"
	},

	"default": {
		"libraries_names": [
			"raylib",
			"dl",
			"pthread"
		]
	},

	"debug": {
		"compiler_args": "-g3 -std=c2x -Og -Wno-missing-field-initializers -Wno-unknown-pragmas -Wall -Wconversion -Wshadow -Wextra -fsanitize=address -fsanitize=leak",
		"linker_args": "-fsanitize=address -fsanitize=leak"
	},

	"analyze": {
		"compiler_args": "-Og -fanalyzer -Wall -Wno-missing-field-initializers -Wno-unknown-pragmas -Wall -Wconversion -Wshadow -Wextra"
	},

	"no-asan": {
		"compiler_args": "-g3 -std=c2x -Og -Wno-missing-field-initializers -Wno-unknown-pragmas -Wall -Wconversion -Wshadow -Wextra",
		"linker_args": ""
	},

	"release": {
		"compiler_args": "-std=c2x -Ofast",
		"linker_args": "-flto"
	}
}
